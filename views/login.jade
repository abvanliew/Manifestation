extends base

block vars
	- var title = 'Login'

block body
	form.form-signin
		h2.form-signin-heading Sign in
		
		label.sr-only(for='inputEmail') Email address
		input#inputEmail.form-control(type='email', placeholder='Email address', name="email", required=true, autofocus='')
		
		label.sr-only(for='inputPassword') Password
		input#inputPassword.form-control(type='password', placeholder='Password', name="password", required=true)

		button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in