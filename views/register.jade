extends base

block vars
	- var title = 'Register'

block body
	form.form-signin
		h2.form-signin-heading Create an Account
		
		label.sr-only( for='inputEmail' ) Email Address
		input#inputEmail.form-control( type='email', placeholder='Email Address', required=true, autofocus='' )
		
		label.sr-only( for='inputDisplayName' ) Display Name
		input#inputDisplayName.form-control( type='text', placeholder='Display Name',required=true )
		
		label.sr-only( for='inputPassword' ) Password
		input#inputPassword.form-control( type='password', placeholder='Password', required=true )

		button#submit-registration.btn.btn-lg.btn-primary.btn-block( type='submit' ) Register
		
block footer
	script( src='/js/register.js' )