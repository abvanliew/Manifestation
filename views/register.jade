extends base

block vars
	- var title = 'Register'

block body
	h1 Create an Account

	form(method="post")
		span Username:
		input(type="text", name="userName", required=true)
		br

		span Email:
		input(type="email", name="email", required=true)
		br

		span Password:
		input(type="password", name="password", required=true)
		br

		input(type="submit")
